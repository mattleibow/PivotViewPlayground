<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:app="clr-namespace:PivotView.Core.VisualizerApp"
             xmlns:vis="clr-namespace:PivotView.Core.VisualizerApp.Visualizers"
             x:Class="PivotView.Core.VisualizerApp.RendererPage">

    <Grid RowDefinitions="*"
          ColumnDefinitions="*,Auto,Auto"
          Padding="20"
          ColumnSpacing="10"
          RowSpacing="10">

        <app:GraphicsViewEx
            HorizontalOptions="Fill"
            VerticalOptions="Fill"
            Drawable="{Binding Visualizer}" />

        <VerticalStackLayout
            Grid.Row="0"
            Grid.Column="1"
            MaximumWidthRequest="500"
            Spacing="10"
            BindableLayout.ItemsSource="{Binding Visualizer.Properties}"
            BindableLayout.ItemTemplateSelector="{StaticResource VisualizerPropertyTemplates}" />

        <Editor
            Grid.Row="0"
            Grid.Column="2"
            WidthRequest="100"
            Text="{Binding ItemsText}" />

    </Grid>

</ContentPage>
