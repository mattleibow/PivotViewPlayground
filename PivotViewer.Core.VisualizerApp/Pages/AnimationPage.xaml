<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:app="clr-namespace:PivotViewer.Core.VisualizerApp"
             xmlns:vis="clr-namespace:PivotViewer.Core.VisualizerApp.Visualizers"
             x:Class="PivotViewer.Core.VisualizerApp.AnimationPage">

    <Grid RowDefinitions="Auto,*"
          ColumnDefinitions="*,Auto"
          Padding="20"
          ColumnSpacing="10"
          RowSpacing="10">

        <Picker
            Grid.Row="0"
            Grid.Column="0"
            ItemsSource="{Binding Visualizers}"
            SelectedItem="{Binding Current}"
            ItemDisplayBinding="{Binding Name}" />

        <app:GraphicsViewEx
            Grid.Row="1"
            Grid.Column="0"
            HorizontalOptions="Fill"
            VerticalOptions="Fill"
            Drawable="{Binding Current}" />

        <VerticalStackLayout
            Grid.Row="0"
            Grid.Column="1"
            Grid.RowSpan="2"
            MaximumWidthRequest="500"
            Spacing="10"
            BindableLayout.ItemsSource="{Binding Current.Properties}"
            BindableLayout.ItemTemplateSelector="{StaticResource VisualizerPropertyTemplates}" />

    </Grid>

</ContentPage>
